# KOOK Bot Token
KOOK_TOKEN=your_bot_token_here

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# MySQL 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=trpg_dicebot

# 默认规则 (coc6 或 coc7)
DEFAULT_RULE=coc7

# 大成功阈值 (默认 5，即 1-5 为大成功)
CRITICAL_THRESHOLD=5

# 大失败阈值 (默认 96，即 96-100 为大失败)
FUMBLE_THRESHOLD=96

# Web 服务配置 (角色卡在线创建)
WEB_HOST=0.0.0.0
WEB_PORT=11021
WEB_BASE_URL=http://your-server-ip:11021
